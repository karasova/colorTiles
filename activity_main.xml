<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <View
            android:id="@+id/a0"
            android:tag="0,0"
            android:background="@color/dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick">
        </View>

        <View
            android:onClick="onClick"
            android:id="@+id/a1"
            android:tag="0,1"
            android:background="@color/bright"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </View>

        <View
            android:onClick="onClick"
            android:id="@+id/a2"
            android:tag="0,2"
            android:background="@color/bright"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </View>

        <View
            android:onClick="onClick"
            android:id="@+id/a3"
            android:tag="0,3"
            android:background="@color/dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <View
            android:onClick="onClick"
            android:id="@+id/b0"
            android:tag="1,0"
            android:background="@color/dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </View>

        <View
            android:onClick="onClick"
            android:id="@+id/b1"
            android:tag="1,1"
            android:background="@color/bright"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </View>

        <View
            android:onClick="onClick"
            android:id="@+id/b2"
            android:tag="1,2"
            android:background="@color/bright"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </View>

        <View
            android:onClick="onClick"
            android:id="@+id/b3"
            android:tag="1,3"
            android:background="@color/dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <View
            android:onClick="onClick"
            android:id="@+id/c0"
            android:tag="2,0"
            android:background="@color/dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </View>

        <View
            android:onClick="onClick"
            android:id="@+id/c1"
            android:tag="2,1"
            android:background="@color/bright"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </View>

        <View
            android:onClick="onClick"
            android:id="@+id/c2"
            android:tag="2,2"
            android:background="@color/bright"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </View>

        <View
            android:onClick="onClick"
            android:id="@+id/c3"
            android:tag="2,3"
            android:background="@color/dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <View
            android:onClick="onClick"
            android:id="@+id/d0"
            android:tag="3,0"
            android:background="@color/dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </View>

        <View
            android:onClick="onClick"
            android:id="@+id/d1"
            android:tag="3,1"
            android:background="@color/bright"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </View>

        <View
            android:onClick="onClick"
            android:id="@+id/d2"
            android:tag="3,2"
            android:background="@color/bright"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </View>

        <View
            android:onClick="onClick"
            android:id="@+id/d3"
            android:tag="3,3"
            android:background="@color/dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
